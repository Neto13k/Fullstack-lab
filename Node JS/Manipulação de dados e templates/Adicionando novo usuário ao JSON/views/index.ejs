<!DOCTYPE html>
<html>
<head>
    <title>Usuários</title>
</head>
<body>

    <h1>Adicionar Usuário</h1>

    <form action="/usuarios" method="POST">

        <input 
            type="text" 
            name="nome" 
            placeholder="Nome"
            required
        >

        <input 
            type="email" 
            name="email" 
            placeholder="Email"
            required
        >

        <button type="submit">
            Adicionar
        </button>

    </form>


    <h1>Lista de Usuários</h1>

    <ul>

        <% usuarios.forEach(usuario => { %>

            <li>
                <strong>Nome:</strong> <%= usuario.nome %> <br>
                <strong>Email:</strong> <%= usuario.email %>
            </li>

            <br>

        <% }) %>

    </ul>

</body>
</html>